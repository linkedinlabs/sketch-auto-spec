{
  "name": "Spec’ing",
  "description": "Plugin to annotate symbols",
  "author": "LinkedIn Labs",
  "homepage": "https://github.com/linkedinlabs/sketch-auto-spec",
  "version": "1.0-b005",
  "identifier": "com.linkedinlabs.sketch.auto-spec-plugin",
  "compatibleVersion": 3,
  "bundleVersion": 1,
  "commands": [
    {
      "name": "Dev: Draw Annotation",
      "identifier": "dev-draw-annotation",
      "script": "./main.js",
      "handler": "drawAnnotation"
    },
    {
      "name": "Dev: Reset Data",
      "identifier": "dev-reset-data",
      "script": "./main.js",
      "handler": "resetData"
    },
    {
      "name": "Annotate Component",
      "identifier": "annotate-layer",
      "shortcut": "ctrl shift a",
      "script": "./main.js",
      "handler": "annotateLayer"
    },
    {
      "name" : "Selection Change Listener",
      "identifier": "selection-change-listener",
      "script": "./main.js",
      "handlers" : {
        "actions": {
          "SelectionChanged.finish": "onSelectionChange"
        }
      }
    },
    {
      "name" : "Open Document Listener",
      "identifier": "open-document-listener",
      "script": "./main.js",
      "handlers" : {
        "actions": {
          "OpenDocument": "onOpenDocument"
        }
      }
    },
    {
      "name": "Show Toolbar",
      "identifier": "view-gui",
      "script": "./GUI.js",
      "handlers": {
        "run": "onRun",
        "actions": {
          "Shutdown": "onShutdown"
        }
      }
    }
  ],
  "menu": {
    "title": "Spec’ing",
    "items": [
      "annotate-layer",
      "view-gui",
      "dev-draw-annotation",
      "dev-reset-data"
    ]
  }
}
