{
  "name": "sketch-speccing",
  "description": "A Sketch plugin for easily specâ€™ing design system components.",
  "version": "0.0.11b",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linkedinlabs/sketch-auto-spec.git"
  },
  "engines": {
    "sketch": ">=55.0"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint './src/**/*.js' './resources/**/*.js'",
    "lint:stylelint": "stylelint './resources/**/*.css'",
    "lint:js": "npm run lint:eslint",
    "lint:css": "npm run lint:stylelint",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint"
  },
  "pre-commit": "lint:staged",
  "skpm": {
    "name": "sketch-speccing",
    "manifest": "src/manifest.json",
    "main": "sketch-speccing.sketchplugin",
    "assets": [
      "assets/**/*"
    ],
    "sketch-assets-file": "sketch-assets/icons.sketch"
  },
  "resources": [
    "resources/**/*.js"
  ],
  "dependencies": {
    "sketch-module-web-view": "^3.0.1"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.11",
    "@skpm/extract-loader": "^2.0.2",
    "css-loader": "^1.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsdoc": "^4.8.4",
    "html-loader": "^0.5.1",
    "lint-staged": "^8.1.5",
    "pre-commit": "^1.2.2",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  },
  "author": "Grant Blakeman <gblakeman@linkedin.com>"
}
