{
  "name": "sketch-specter",
  "description": "A Sketch plugin for easily specâ€™ing design system elements.",
  "version": "1.1.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/linkedinlabs/specter-sketch.git"
  },
  "engines": {
    "sketch": ">=55.0"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link",
    "lint": "npm run lint:js",
    "lint:eslint": "eslint './src/**/*.js' './resources/**/*.js'",
    "lint:stylelint": "stylelint './resources/**/*.css'",
    "lint:js": "npm run lint:eslint",
    "lint:css": "npm run lint:stylelint",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint"
  },
  "pre-commit": "lint:staged",
  "skpm": {
    "name": "sketch-specter",
    "manifest": "src/manifest.json",
    "main": "Specter.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "resources": [
    "resources/**/*.js"
  ],
  "dependencies": {
    "sketch-module-web-view": "^3.1.4"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.11",
    "@skpm/extract-loader": "^2.0.2",
    "css-loader": "^1.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^4.8.4",
    "html-loader": "^0.5.1",
    "lint-staged": "^9.3.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "author": "Grant Blakeman <gblakeman@linkedin.com>"
}
